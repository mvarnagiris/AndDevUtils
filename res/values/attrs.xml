<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="roboto_typeface" format="enum">
        <enum name="regular" value="0" />
        <enum name="light" value="1" />
        <enum name="thin" value="2" />
        <enum name="condensed" value="3" />
        <enum name="condensed_italic" value="4" />
    </attr>

    <declare-styleable name="RTextView">
        <attr name="roboto_typeface" />
    </declare-styleable>
    <declare-styleable name="REditText">
        <attr name="roboto_typeface" />
    </declare-styleable>
    <declare-styleable name="RButton">
        <attr name="roboto_typeface" />
    </declare-styleable>
    <declare-styleable name="ClearableEditText">
        <attr name="clearDrawable" format="reference" />
    </declare-styleable>

</resources>